{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"作業が完了しました！\" with title \"Claude Code\" subtitle \"$CLAUDE_PROJECT_DIR\"'"
          },
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Submarine.aiff"
          }
        ]
      }
    ]
  },
  "extraKnownMarketplaces": {
    "my-tools": {
      "source": {
        "source": "github",
        "repo": "naoto24kawa/claude-plugins"
      }
    }
  },
  "enabledPlugins": {
    "cloudflare-skills@naoto24kawa-claude-plugins": true,
    "review-skills@naoto24kawa-claude-plugins": true,
    "testing-skills@naoto24kawa-claude-plugins": true,
    "aws-skills@naoto24kawa-claude-plugins": true,
    "notion-skills@naoto24kawa-claude-plugins": true
  },
  "alwaysThinkingEnabled": true
}
